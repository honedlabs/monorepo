{
	"name": "honed/modal",
	"description": "Build dynamic modal dialogs for your Inertia-powered Laravel apps",
	"keywords": [
		"honed",
		"laravel",
		"inertia",
		"modal"
	],
	"homepage": "https://github.com/honedlabs/modal",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Joshua Wallace",
			"email": "josh@joshua-wallace.com",
			"homepage": "https://joshua-wallace.com"
		},
		{
			"name": "Boris Lepikhin",
			"email": "boris@lepikhin.com"
		}
	],
	"require": {
		"php": "^8.2",
		"illuminate/support": "^11.0||^12.0",
		"inertiajs/inertia-laravel": "^1.0||^2.0"
	},
	"require-dev": {
		"larastan/larastan": "^3.0",
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0.0||^10.0.0",
        "pestphp/pest": "^3.5.1",
        "pestphp/pest-plugin-arch": "^3.0.0",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.1",
        "phpstan/phpstan-phpunit": "^2.0.3",
		"pestphp/pest-plugin-laravel": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"Honed\\Modal\\": "src/",
			"Honed\\Modal\\Tests\\": "tests/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Honed\\Modal\\Tests\\": "tests/"
		}
	},
	"extra": {
		"laravel": {
			"providers": [
				"Honed\\Modal\\ModalServiceProvider"
			]
		}
	},
	"scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "check": [
            "@composer run analyse",
            "@composer run test",
            "@composer run format"
        ]
    },
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true,
			"phpstan/extension-installer": true
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
